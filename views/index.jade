//- index.jade
extends ./layout.jade

block row-content
  .container
    div.row
      div.col-lg-6.col-md-12.col-xs-12
        h2=t('application.input.title')
        p!=t('application.warning.minimumRecommendedWarning')
        p!=t('application.warning.selfReflectiveText')
        div.well
          div.form-group.row
            div.col-lg-12.col-xs-12(style='padding:0px;')
              label.col-lg-6.col-md-6.col-xs-6.control-label=t('application.label.chooseLanguage') + ":"
              div.col-lg-6.col-md-6.col-xs-6.sample-radio-list
                div.sample-radio-container
                  label
                    input#english_radio.sample-radio(type='radio', name='sample_text', value='en', checked)
                    span=t('application.label.english')
                div.sample-radio-container
                  label                    
                    input.sample-radio(type='radio', name='sample_text', value='es')
                    span=t('application.label.spanish')
              div#t0
                textarea.content.form-control(rows='12', required='true', name='text0'
                  placeholder=t('application.input.placeHolder0'))
                  |#{content0}
                div.text-right.wordsCount0Footnote
                  span.wordsCount0.small
                  span.small=" " + t('application.label.words')
              div#t1  
                textarea.content.form-control(rows='12', required='true', name='text1'
                  placeholder=t('application.input.placeHolder1'))
                  |#{content1}
                div.text-right.wordsCount1Footnote
                  span.wordsCount1.small
                  span.small=" " + t('application.label.words')
          div.form-group.row.buttons-container
            div.col-lg-4.col-xs-4
              button.btn.btn-block.clear-btn(type='button')=t('application.input.clear')
            div.col-lg-4.col-lg-push-4.col-xs-4.col-xs-push-4
              button.btn.btn-block.analysis-btn(type='button')=t('application.input.analyze')
      div.col-lg-6.col-md-12.col-xs-12
        div.form-group.row.loading.text-center.loading(style='display:none;')
          h2 &nbsp;
          img(src='images/watson.gif')
        div.form-group.row.error(style='display: none;')
          h2 &nbsp;
          div.well
            p.errorMsg
            div.captcha(style='display:none;margin-bottom:10px;')
              div.g-recaptcha(data-sitekey='6LcRbQkTAAAAAGUFVbnuqDfse-XZASLZwoC34oJV')

        div.results(style='display: none;')
          div#yourPersonality0
            h2= t('application.label.yourPersonality0') + "*"
            div.well
              div.summary-div0
              div.text-right(style='color: gray')
                em.small= "*" + t('application.label.comparedFootNote')
              div.text-right(style='color: gray')
                em.small.outputMessageFootnote
           div#yourPersonality1
            h2= t('application.label.yourPersonality1') + "*"
            div.well
              div.summary-div1
              div.text-right(style='color: gray')
                em.small= "*" + t('application.label.comparedFootNote')
              div.text-right(style='color: gray')
                em.small.outputMessageFootnote
        div.results(style='display: none;')
          div.row
            div.col-lg-5.col-md-12.col-xs-12
              div.traits-div0
                h3=t('application.label.personalityData0')
                div.col555px.well.traits(style='display: none;')
              div.traits-div1
                h3=t('application.label.personalityData1')
                div.col555px.well.traits(style='display: none;')
            div.col-lg-7.col-xs-12.col-md-12
              div#personalityViz0
                h3=t('application.label.personalityVisualizationData0')
                div.well#vizcontainer
              div#personalityViz1
                h3=t('application.label.personalityVisualizationData1')
                div.well#vizcontainer

      //- templates to avoid to create HTML in javascript
      div.hidden
        div#header-template
          div.row.theader
            .col-lg-7.col-xs-7
              span= t('application.label.name')
            .col-lg-5.col-xs-5.text-right
              span= t('application.label.value')
        div#trait-template
          div.row
            .tname.col-lg-7.col-xs-7
              span
            .tvalue.col-lg-5.col-xs-5.text-right
              span

        div#model-template
          div.row
            .col-lg-12.col-xs-12.text-center
              span

